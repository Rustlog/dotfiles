#!/usr/bin/env bash

HL="\033[1m"
NC="\033[0m"

printf '%b\n' "\n${HL}PCI GPU Devices (lspci)${NC}"
lspci -nn | grep -i "VGA\|3D"

printf '%b\n' "\n${HL}/dev/dri/by-path → card mappings:${NC}"
for path in /dev/dri/by-path/*-card; do
    card="$(readlink -f "${path}" | xargs basename)"
    pci="$(basename "${path}" | cut -d- -f2)"
    printf '%b\n' "  ${card} ↔ ${pci} ↔ ${path}"
done

printf '%b\n' "\n${HL}DRM Cards → PCI Address Mapping${NC}"
for card in /sys/class/drm/card[0-9]; do
    card_name="${card##*/}"
    device_path="$(readlink -f "${card}/device")"
    vendor="$(cat "${card}/device/vendor")"
    vendor_name="Unknown"
    case "${vendor}" in
        0x10de) vendor_name="NVIDIA" ;;
        0x1002) vendor_name="AMD"    ;;
        0x8086) vendor_name="Intel"  ;;
    esac
    printf '%b\n' "  ${card_name} → ${device_path} → ${vendor_name}"
done

printf '%b\n' "\n${HL}Connected Displays${NC}"
for conn in /sys/class/drm/card*-*; do
    [ -e "${conn}/status" ] || continue
    status="$(cat "${conn}/status")"
    [[ "${status}" != "connected" ]] && continue
    name=$(basename "${conn}")
    pci=$(readlink -f "${conn}/device" | grep -oP '0000:\K[0-9a-f:.]+'| xargs)
    printf '%b\n' "  ${name} is connected ↔ PCI '${pci}'"
done

printf '%b\n' "\n${HL}Vulkan Devices${NC}"
vulkaninfo 2>/dev/null | grep deviceName | sed 's/^/  /'

